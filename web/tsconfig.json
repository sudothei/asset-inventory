{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "components/*": ["components/*"],
      "helpers/*": ["helpers/*"],
      "slices/*": ["slices/*"],
      "thunks/*": ["thunks/*"],
      "types/*": ["types/*"]
    },
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
